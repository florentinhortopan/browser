{
  "name": "puxa-browser",
  "version": "1.0.0",
  "description": "PUXA AI Browser",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac"
  },
  "build": {
    "appId": "com.puxa.browser",
    "productName": "PUXA Browser",
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg"
    },
    "files": [
      "main.js",
      "preload.js",
      "../backend/**/*",
      "../frontend/dist/**/*"
    ]
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}

